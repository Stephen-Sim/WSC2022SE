<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreshApp.Views.MainPage"
             Title="Seoul Stay Addon Services">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Margin="10">
            <Label Text="Enter username/password"/>
            <Frame HeightRequest="550" BackgroundColor="Transparent" BorderColor="Black">
                <Grid RowDefinitions="*, *, *" ColumnDefinitions="200, *"> 
                    <Label Text="Uername:"/>
                    <Entry x:Name="usernameEntry" Grid.Column="1"/>
                    
                    <Label Grid.Row="1" Text="Password:"/>
                    <Entry x:Name="passwordEntry" IsPassword="True" Grid.Row="1" Grid.Column="1"/>

                    <Button Grid.Row="2" Grid.Column="1" Text="Login" HeightRequest="100" Clicked="Button_Clicked"/>
                </Grid>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>