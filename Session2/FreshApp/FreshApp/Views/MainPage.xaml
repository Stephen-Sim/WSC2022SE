<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreshApp.Views.MainPage"
             Title="Owner / Manager">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="5">
            <Image Source="logo" HeightRequest="100" Margin="0, 0, 0, 20"/>

            <Label Text="Please Login to the System"/>
            <Frame BorderColor="LightGray" BackgroundColor="Transparent" HeightRequest="250">
                <Grid RowDefinitions="70, 70, 50" ColumnDefinitions="100, *">
                    <Label Text="Username:"/>
                    <Entry x:Name="usernameEntry" Grid.Column="1" BackgroundColor="Transparent"/>
                    
                    <Label Text="Password:" Grid.Row="1"/>
                    <Entry x:Name="passwordEntry" IsPassword="True" Grid.Row="1" Grid.Column="1" BackgroundColor="Transparent"/>

                    <Button Grid.Row="2" Grid.Column="1" Text="Login" Clicked="Button_Clicked"/>
                </Grid>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>